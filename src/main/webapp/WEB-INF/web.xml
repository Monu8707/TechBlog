<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  
 <servlet>
<servlet-name>RegisterServlet</servlet-name>
<servlet-class>com.tech.blog.servlet.RegisterServlet</servlet-class>
</servlet>
<!-- LoginServlet -->
<servlet>
<servlet-name>LoginServlet</servlet-name>
<servlet-class>com.tech.blog.servlet.LoginServlet</servlet-class>
</servlet>

<servlet>
<servlet-name>LogoutServlet</servlet-name>
<servlet-class>com.tech.blog.servlet.LogoutServlet</servlet-class>
</servlet>

<!-- Edit Servlet -->

<servlet>
<servlet-name>EditServlet</servlet-name>
<servlet-class>com.tech.blog.servlet.EditServlet</servlet-class>
</servlet>
<!-- AddPostServlet -->
<servlet>
<servlet-name>AddPostServlet</servlet-name>
<servlet-class>com.tech.blog.servlet.AddPostServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>RegisterServlet</servlet-name>
<url-pattern>/register</url-pattern>
</servlet-mapping>

<servlet-mapping>
<servlet-name>LoginServlet</servlet-name>
<url-pattern>/log</url-pattern>
</servlet-mapping>

<servlet-mapping>
<servlet-name>LogoutServlet</servlet-name>
<url-pattern>/logout</url-pattern>
</servlet-mapping>

<!-- mapping of EditServlet -->
<servlet-mapping>
<servlet-name>EditServlet</servlet-name>
<url-pattern>/edit</url-pattern>
</servlet-mapping>
<!-- mapping of addPostServlet -->
<servlet-mapping>
<servlet-name>AddPostServlet</servlet-name>
<url-pattern>/addpost</url-pattern>
</servlet-mapping>
</web-app>
